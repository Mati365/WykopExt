{
    "manifest_version": 2
  , "name": "WykopExt"
  , "description": "A simple Google Chrome extension that show notifications from Wykop.pl"
  , "version": "0.0.1"
  , "browser_action": {
      "default_icon": "resources/icon.png"
    , "default_popup": "build/popups/popup.html"
  }
//  , "content_scripts": [{
//        "matches": ["http://*/*", "https://*/*"]
//      , "css": ["styles/styles.css"]
//      , "js": [
//            "bower_components/jquery/dist/jquery.min.js"
//          , "content-scripts/recorder.js"
//          , "content-scripts/player.js"
//      ]
//  }]
  , "background": {
      "scripts": [
          "build/bower_components/jquery/dist/jquery.min.js"
        , "build/bower_components/cryptojslib/rollups/md5.js"
        , "build/bower_components/cryptojslib/components/md5-min.js"
        , "build/bower_components/underscore/underscore-min.js"
        , "build/js/background.js"
      ]
  }
  , "web_accessible_resources": [
      "build/popups/login.html"
  ]
  , "permissions": [
        "<all_urls>"
      , "tabs"
      , "storage"
      , "unlimitedStorage"
  ]
}